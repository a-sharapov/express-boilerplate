{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "Lightweight TypeScript based backend boilerplate",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/index.js",
    "prestart": "npm run build",
    "server:watch": "ts-node-dev --respawn --transpile-only src/index.ts",
    "prebuild": "npm run lint",
    "lint": "eslint --cache --ext .ts .",
    "lint:fix": "eslint --cache --ext .ts . --fix",
    "test:coverage": "jest --config=jest.coverage.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a-sharapov/express-boilerplate.git"
  },
  "author": "a-sharapov",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/a-sharapov/express-boilerplate/issues"
  },
  "homepage": "https://github.com/a-sharapov/express-boilerplate#readme",
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.0",
    "@types/multer": "^1.4.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "eslint": "^8.25.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.1.0",
    "jest": "^29.2.1",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@types/cors": "^2.8.12",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-http-context": "^1.2.4",
    "log4js": "^6.7.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.8.1",
    "swagger-ui-express": "^4.5.0"
  }
}
