{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "outDir": "dist",
    "baseUrl": "src",
    "lib": ["es7"],
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "test"],
  "sourceMap": true
}
